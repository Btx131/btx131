{% extends 'base.html.twig' %}

{% block content %}
<button onclick="history.back()" class="back-button">Powrót</button>
<h1>Pytania</h1>

<!-- Formularz dodawania -->
<form id="add-question-form">
  <input type="text" placeholder="Treść pytania" id="question-text">
  <input type="text" placeholder="Odpowiedź A" id="answer-a">
  <input type="text" placeholder="Odpowiedź B" id="answer-b">
  <input type="text" placeholder="Odpowiedź C" id="answer-c">
  <button type="submit">Dodaj</button>
</form>

<!-- Lista pytań -->
<div id="questions-list">
  <!-- Tutaj będą generowane pytania przez JS -->
</div>
{% endblock %}